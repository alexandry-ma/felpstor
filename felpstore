<script>
/* ========== Dados iniciais ========== */
const products = [
  { id: "HS_pescoco", name: "HS Pesco√ßo", price: 48.99, desc: "CONTANDO HS NO PERCO√áO." },
  { id: "HS_peito", name: "HS Peito ", price: 57.99, desc: "CONTANDO HS NO PEITO." },
  { id: "HS_alto", name: "HS Alto ", price: 60.00, desc: "HS ACIMA DA CABE√áA." },
  { id: "HS_alto_art", name: "HS Alto HOLO", price: 70.00, desc: "HS ALTO COM HOLOGRAMA." },
  { id: "HS_pescoco_art", name: "HS Pesco√ßo HOLO", price: 60.00, desc: "HS PESCO√áO COM HOLOGRAMA." },
  { id: "HS_peito_art", name: "HS Peito HOLO", price: 69.99, desc: "HS Peito com HOLOGRAMA." },
];

let cart = [];

/* ========== Helpers ========== */
function formatBRL(v){ return v.toLocaleString('pt-BR',{style:'currency',currency:'BRL'}); }
function $(id){ return document.getElementById(id); }

/* ========== Render products ========== */
function renderProducts(){
  const wrap = $('productsList'); wrap.innerHTML = '';
  products.forEach(p=>{
    const el = document.createElement('div'); el.className='product';
    el.innerHTML = `
      <div class="thumb">${p.name.split(' ')[0]}</div>
      <div class="pmeta">
        <h3>${p.name}</h3>
        <p>${p.desc}</p>
        <div style="display:flex;align-items:center;gap:12px;margin-top:8px">
          <div class="price">${formatBRL(p.price)}</div>
          <button class="add-btn" data-id="${p.id}">Adicionar</button>
        </div>
      </div>
    `;
    wrap.appendChild(el);
  });
  document.querySelectorAll('.add-btn').forEach(b=>{
    b.addEventListener('click', e=>{
      const id = e.currentTarget.dataset.id; addToCart(id);
    });
  });
}

/* ========== Cart management ========== */
function addToCart(id){
  const p = products.find(x=>x.id===id); if(!p) return;
  const ex = cart.find(i=>i.id===id);
  if(ex) ex.q++;
  else cart.push({ id:p.id, name:p.name, price:p.price, q:1 });
  saveCartToStorage();
  updateCartUI();
}

function updateCartUI(){
  const container = $('cartItems');
  container.innerHTML = '';
  if(cart.length===0){ container.innerHTML = '<p class="muted">Carrinho vazio</p>'; }
  else{
    cart.forEach(item=>{
      const row = document.createElement('div'); row.className='cart-row';
      row.innerHTML = `
        <div>
          <div style="font-weight:700">${item.name}</div>
          <small>${item.q} x ${formatBRL(item.price)}</small>
        </div>
        <div style="text-align:right">
          <div style="font-weight:800">${formatBRL(item.price * item.q)}</div>
          <div class="qty-inline" style="margin-top:6px">
            <button data-id="${item.id}" data-op="minus">-</button>
            <span style="padding:0 6px">${item.q}</span>
            <button data-id="${item.id}" data-op="plus">+</button>
          </div>
        </div>
      `;
      container.appendChild(row);
    });
    // attach qty events
    container.querySelectorAll('button[data-op]').forEach(btn=>{
      btn.addEventListener('click', e=>{
        const id = e.currentTarget.dataset.id;
        const op = e.currentTarget.dataset.op;
        const it = cart.find(i=>i.id===id);
        if(!it) return;
        if(op==='plus') it.q++;
        else it.q = Math.max(0, it.q-1);
        cart = cart.filter(x=>x.q>0);
        saveCartToStorage();
        updateCartUI();
      });
    });
  }
  const total = cart.reduce((s,i)=>s+i.price*i.q,0);
  $('cartTotal').innerText = formatBRL(total);
  $('cartCount').innerText = cart.reduce((s,i)=>s+i.q,0);
}

/* ========== Persistence (cart + users + orders) ========== */
function saveCartToStorage(){ localStorage.setItem('felp_cart', JSON.stringify(cart)); }
function loadCartFromStorage(){ const c = localStorage.getItem('felp_cart'); cart = c?JSON.parse(c):[]; updateCartUI(); }

/* ========== Checkout: WhatsApp & PIX ========== */
function checkoutWhatsApp(){
  if(cart.length===0){ alert('Carrinho vazio.'); return; }
  const lines = cart.map(i=>`${i.q}x ${i.name} - ${formatBRL(i.price * i.q)}`);
  const total = formatBRL(cart.reduce((s,i)=>s+i.price*i.q,0));
  const msg = `Ol√°! Quero comprar:%0A${encodeURIComponent(lines.join('%0A'))}%0ATotal: ${encodeURIComponent(total)}%0ANome:`;
  const waNumber = '5577991220221'; // <--- Troque para o seu n√∫mero (sem + ou espa√ßos)
  const url = `https://wa.me/${waNumber}?text=${msg}`;
  // save as order if logged in
  saveOrderIfLogged('WhatsApp', total, lines);
  window.open(url, '_blank');
}

/* ========== User system (localStorage) ========== */
function getUsers(){ return JSON.parse(localStorage.getItem('felp_users')||'{}'); }
function saveUsers(u){ localStorage.setItem('felp_users', JSON.stringify(u)); }
function getCurrentUser(){ return JSON.parse(localStorage.getItem('felp_current')||'null'); }
function setCurrentUser(obj){ localStorage.setItem('felp_current', JSON.stringify(obj)); updateAccountUI(); }

function registerUser(username,password,whats){
  if(!username || !password || password.length<4){ alert('Usu√°rio e senha (m√≠n 4 caracteres)'); return false; }
  const users = getUsers();
  if(users[username]){ alert('Usu√°rio j√° existe'); return false; }
  users[username] = { password: password, whatsapp: whats||'' , orders: [] };
  saveUsers(users);
  alert('Conta criada! Voc√™ j√° est√° logado.');
  setCurrentUser({ username });
  return true;
}

function loginUser(username,password){
  const users = getUsers();
  if(!users[username] || users[username].password !== password){ alert('Usu√°rio ou senha inv√°lidos'); return false; }
  setCurrentUser({ username });
  alert('Logado com sucesso.');
  return true;
}

function logoutUser(){ localStorage.removeItem('felp_current'); updateAccountUI(); alert('Voc√™ saiu da conta.'); }

/* ========== Orders (saved per user) ========== */
function saveOrderIfLogged(method,total,lines,txid){
  const cur = getCurrentUser();
  if(!cur) return; // n√£o est√° logado
  const users = getUsers();
  const entry = { id: 'ORD-'+Date.now(), date: new Date().toISOString(), method, total, items: lines, txid, status: method.startsWith('PIX') ? 'Pendente' : 'Enviado (via WhatsApp)' };
  users[cur.username].orders = users[cur.username].orders || [];
  users[cur.username].orders.unshift(entry);
  saveUsers(users);
  renderOrdersForCurrent();
  // clear cart after saving order
  cart = []; saveCartToStorage(); updateCartUI();
}

/* ========== Render account UI ========== */
function updateAccountUI(){
  const cur = getCurrentUser();
  if(cur){
    $('acctInfo').innerHTML = `Logado como <strong>${cur.username}</strong>`;
    $('logoutBtn').style.display = 'inline-block';
    $('openLogin').style.display = 'none';
    $('openLogin2').style.display = 'none';
  } else {
    $('acctInfo').innerText = 'Voc√™ n√£o est√° conectado.';
    $('logoutBtn').style.display = 'none';
    $('openLogin').style.display = 'inline-block';
    $('openLogin2').style.display = 'inline-block';
  }
  renderOrdersForCurrent();
}

function renderOrdersForCurrent(){
  const wrap = $('ordersList'); wrap.innerHTML = '';
  const cur = getCurrentUser();
  if(!cur){ wrap.innerHTML = '<p class="muted">Fa√ßa login para ver seus pedidos aqui.</p>'; return; }
  const users = getUsers();
  const orders = (users[cur.username].orders||[]);
  if(orders.length===0){ wrap.innerHTML = '<p class="muted">Nenhum pedido ainda.</p>'; return; }
  orders.forEach(o=>{
    const d = document.createElement('div'); d.style.padding='8px 0'; d.style.borderBottom='1px dashed rgba(255,255,255,0.03)';
    d.innerHTML = `<div style="font-weight:700">${o.method} ‚Ä¢ ${o.date.split('T')[0]}</div><div style="font-size:13px;color:rgba(255,255,255,0.75)">${o.items.join(', ')}</div><div style="margin-top:6px;font-weight:800">${o.total} ‚Ä¢ ${o.status}</div>`;
    wrap.appendChild(d);
  });
}

/* ========== Modal login/register handlers ========== */
function showModal(showRegister=false){
  $('modal').style.display = 'flex';
  $('formLogin').style.display = showRegister ? 'none' : 'block';
  $('formRegister').style.display = showRegister ? 'block' : 'none';
  $('modalTitle').innerText = showRegister ? 'Criar conta' : 'Entrar na sua conta';
}
function hideModal(){ $('modal').style.display = 'none'; }

/* ========== Init & events ========== */
document.addEventListener('DOMContentLoaded', ()=>{
  $('year').innerText = new Date().getFullYear();
  renderProducts();
  loadCartFromStorage();
  updateAccountUI();

  // cart toggle
  $('cartToggle').addEventListener('click', ()=>{
    window.scrollTo({ top: document.querySelector('.side').offsetTop - 80, behavior: 'smooth' });
  });

  // checkout buttons
  $('checkoutWhats').addEventListener('click', checkoutWhatsApp);

  // login modal controls
  $('openLogin').addEventListener('click', ()=> showModal(false));
  $('openLogin2').addEventListener('click', ()=> showModal(false));
  $('closeModal').addEventListener('click', hideModal);

  $('toRegister').addEventListener('click', ()=> showModal(true));
  $('toLogin').addEventListener('click', ()=> showModal(false));

  $('doRegister').addEventListener('click', ()=>{
    const u = $('regUser').value.trim();
    const p = $('regPass').value;
    const w = $('regWhats').value.trim();
    if(registerUser(u,p,w)){ hideModal(); updateAccountUI(); }
  });
  $('doLogin').addEventListener('click', ()=>{
    const u = $('loginUser').value.trim();
    const p = $('loginPass').value;
    if(loginUser(u,p)){ hideModal(); updateAccountUI(); }
  });

  $('logoutBtn').addEventListener('click', ()=>{ logoutUser(); });

  // pre-fill whatsapp link (in case user changed phone)
  // find waLink and replace the phone if you change the var at top
});

/* ========== Utility scrolls ========== */
function scrollToCatalog(){ document.querySelector('#produtos').scrollIntoView({behavior:'smooth'}); }
function scrollToContact(){ document.querySelector('#contato').scrollIntoView({behavior:'smooth'}); }
</script>

</body>
</html>
